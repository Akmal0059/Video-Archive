<UserControl
    x:Class="VideoArchive.App.Controls.EditableTextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VideoArchive.App.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="root"
    d:DesignHeight="30"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <TextBox
            Name="textBox"
            FontSize="{Binding ElementName=root, Path=FontSize}"
            Style="{StaticResource BaseTextBox}"
            Text="{Binding ElementName=root, Path=Text, UpdateSourceTrigger=PropertyChanged}"
            TextAlignment="{Binding ElementName=root, Path=TextAlignment}"
            TextWrapping="{Binding ElementName=root, Path=TextWrapping}" />
        <TextBlock
            Name="textBlock"
            Margin="6,0,0,0"
            VerticalAlignment="Center"
            FontSize="{Binding ElementName=root, Path=FontSize}"
            Style="{StaticResource BaseText}"
            Text="{Binding ElementName=root, Path=Text}"
            TextAlignment="{Binding ElementName=root, Path=TextAlignment}"
            TextWrapping="{Binding ElementName=root, Path=TextWrapping}" />
    </Grid>
</UserControl>
